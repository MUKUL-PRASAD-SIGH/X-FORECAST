# Email Configuration for Authentication
# Copy this file to .env and fill in your email service details

# SMTP Server Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587

# Email Credentials (use app-specific password for Gmail)
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password

# From Email Address
FROM_EMAIL=noreply@xforecast.com

# Database Configuration
DATABASE_URL=sqlite:///users.db

# JWT Secret Key (change this in production)
JWT_SECRET_KEY=x_forecast_secret_2024_change_in_production

# Application URLs
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000